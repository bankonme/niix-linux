#!/bin/sh

set -e

case "$(dpkg --print-architecture)" in
	amd64)
		_LINUX_FLAVOURS="amd64"
		_SOURCE="false"
		;;

	i386)
		_LINUX_FLAVOURS="686-pae"
		_SOURCE="false"
		;;
esac

lb config noauto \
	--clean \
	--ignore-system-defaults \
	--mode debian \
	--linux-flavours "${_LINUX_FLAVOURS}" \
	--linux-packages "linux-image linux-headers" \
 	--bootappend-live "boot=live config splash locales=zh_CN.UTF-8 username=tony user-fullname=tony hostname=tonybox" \
	--bootappend-live-failsafe "boot=live config quiet splash locales=zh_CN.UTF-8 username=tony hostname=tonybox" \
	--apt-indices false \
        --parent-mirror-bootstrap "ftp://ftp.cn.debian.org/debian/" \
        --parent-mirror-chroot "ftp://ftp.cn.debian.org/debian/" \
        --parent-mirror-binary "ftp://ftp.cn.debian.org/debian/" \
        --parent-mirror-debian-installer "ftp://ftp.cn.debian.org/debian/" \
        --mirror-bootstrap "ftp://ftp.cn.debian.org/debian/" \
        --mirror-chroot "ftp://ftp.cn.debian.org/debian/" \
        --mirror-binary "ftp://ftp.cn.debian.org/debian/" \
        --mirror-debian-installer "ftp://ftp.cn.debian.org/debian/" \
        --mirror-bootstrap ftp://ftp.cn.debian.org/debian/ \
	--source "${_SOURCE}" \
	--archive-areas "main contrib" \
	--iso-volume "NiixLinux" \
	--iso-publisher "Niix Linux Systems; etony.an@gmail.com" \
	--iso-application "NiixLinux" \
	--iso-preparer "NiixBuilder" \
	--firmware-chroot false \
	--memtest none \
	--debootstrap-options "--variant=minbase" \
	--debian-installer live \
	--bootloader syslinux \
"${@}"

